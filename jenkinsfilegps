pipeline {
    agent any
    
    environment {
        MAVEN_HOME = tool 'Maven 3.2.1'
        JAVA_HOME = '/opt/java/openjdk'  // Asegúrate de usar la ruta correcta según tu instalación de Java
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                script {
                    def mavenHome = tool 'Maven 3.2.1'
                    def mavenCmd = "${mavenHome}/bin/mvn"
                    sh "${mavenCmd} clean install"
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    // Aquí podrías agregar comandos para desplegar tu aplicación, por ejemplo, usando Docker, Ansible, etc.
                    // Ejemplo: sh "ansible-playbook deploy.yml"
                }
            }
        }
    }
    
    post {
        always {
            // Puedes agregar acciones posteriores, como notificaciones o limpieza de recursos
        }
        success {
            // Acciones a realizar en caso de éxito
        }
        failure {
            // Acciones a realizar en caso de fallo
        }
    }
}
